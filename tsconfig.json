{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6", "es7", "dom", "esnext.array"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": false,
    "rootDir": "src",
    "jsx": "react",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
